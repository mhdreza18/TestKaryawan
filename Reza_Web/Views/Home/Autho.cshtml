@model Reza_Web.Models.ViewModelAdmin
@{
    ViewBag.Title = "SMI | Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.CardCode = @Model.Admin[0].DAPCardCode;
    ViewBag.CardName = @Model.Admin[0].CardName;
    ViewBag.Content = "Set Authorizations";
}
@section content {
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header pl-3">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group mb-0">
                                <div class="row">
                                    <div class="col pl-2 pr-2">
                                        <select id="sqauser" class="form-control form-control-sm select2" style="width: 100%;">
                                            @foreach (var item in Model.Customer)
                                            {
                                                <option data-code="@item.CardCode" @((Model.Admin[0].DAPCardCode == @item.CardCode) ? " selected" : "")>@item.CardCode - @item.CardName</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-1">
                    <div id="sqaList" class="tree well">
                        <ul>
                            @foreach (var item in Model.Autho)
    {
                            <li>
                                <span>  <input type="checkbox" data-code ="@item.Id" data-status ="@item.Status" class="modul" @((item.Status == 1) ? "checked" : "")>  @item.Module</span>


                                @if (item.ListChildren != null)
                                {
                            <ul>
                                @foreach (var itemDetail in item.ListChildren)
                                {
                                    <li>
                                        <span><input type="checkbox" data-code ="@itemDetail.Id" data-status ="@itemDetail.Status" class="submodul" @((itemDetail.Status == 1) ? "checked" : "")>  @itemDetail.Module</span>
                                    </li>
                                }
                            </ul>
                                        }

                                   
                                </li>
    }
                        
                            

                        </ul>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" id="updateAutho" class="btn btn-success waves-effect btn-sm">Update</button>
                </div>
        </div>       
        </div>
    </section>
}

